<aside class="hidden sm:block shrink-0 w-64 pt-14">
  {% form_tag 'search' %}
    <div class="relative flex items-center mb-4">
      <input type="text" name="{{form.keywords_field_name}}" value="{{ search.keywords | escape }}" class="block w-full outline-none border-2 bg-white rounded border-primary focus:border-primary-focus pl-2 pr-8 text-[#424242] py-2 placeholder:text-gray-400 text-sm" placeholder="{{ "search.placeholder" | t }}">
      <div class="absolute inset-y-0 right-0 flex py-2 pr-2">
        <kbd class="inline-flex items-center px-1 font-sans text-xs text-gray-400">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
          </svg>
        </kbd>
      </div>
    </div>
  {% endform_tag %}
  <ul role="list" class="flex flex-col space-y-1">
    {% for tag in site.tags %}
      <li>
        <a href="{{ tag.path }}" class="flex items-center space-x-2 px-2 py-2 hover:bg-gray-500/5 transition-all duration-300 ease-in-out">
          <span class="w-2 h-2 rounded-full shrink-0" style="background: {{ tag.bg_color }}"></span>
          <span class="text-primary-darken w-0 flex-grow break-words">
            {{ tag.name }}
          </span>
        </a>
      </li>
    {% endfor %}
    <hr>
    <li>
      {{ site.settings.copyright_info }}
    </li>
  </ul>
</aside>
