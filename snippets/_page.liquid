<div class="border-2">
  <article class="p-4 bg-white">
    {% for tag in page.tags %}
      <span style="background: {{ tag.bg_color }}" class="px-4 py-1 text-sm font-semibold text-white bg-purple-600 border border-transparent border-purple-200 rounded-full focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2">
        {{ tag.name }}
      </span>
    {% endfor %}

    <span class="text-sm text-gray-400 ml-5">{{ page.edited_at | time_ago }}</span>

    <h2 class="my-5 text-2xl font-bold leading-7 text-gray-900 md:text-3xl">
      <a href="{{page.path}}" class="hover:text-gray-700">{{ page.link_text }}</a>
    </h2>
    <p class="mb-5 text-sm leading-6 text-gray-500 line-clamp-2">{{ page.settings.description }}</p>
  </article>

</div>
